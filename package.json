  "version": "1.0.0",
  "scripts": {
    "start": "webpack --watch --config webpack.dev.config.js",
    "build": "webpack",
    "build:dev": "webpack --config webpack.dev.config.js",
    "package": "cd dist && zip -r -FS ../solid-authentication.zip * --exclude '*.git*'",
