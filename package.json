  "license": "MIT",
  "devDependencies": {
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.42.0",
    "eslint-plugin-jsdoc": "^46.5.1",
    "markdownlint-cli2": "^0.8.1",
    "webpack": "^5.86.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@comunica/query-sparql": "^2.10.0",
    "uuid": "^9.0.0"
  }
