{
  "manifest_version": 3,

  "name": "Solid Authentication",
  "description": "Solid Authentication",
  "version": "1.0",

  "icons": {
    "48": "solid-48.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Solid Authentication"
  },

  "background": {
    "service_worker": "sw.js"
  },

  "externally_connectable": {
    "matches": ["<all_urls>"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
