{
  "manifest_version": 3,

  "name": "Solid Identity Extension",
  "description": "Manage and switch between your Solid identities",
  "version": "1.0",

  "icons": {
    "48": "solid-48.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Solid Authentication"
  },

  "background": {
    "service_worker": "sw.js"
  },

  "externally_connectable": {
    "matches": ["<all_urls>"]
  }
}
